extends layout

block content
  h1= title
  p Welcome #{title}. User
  p Number of rows is #{query.rows}. Number of columns is #{query.cols}.

  - var rows = Number(query.rows)
  - var cols = Number(query.cols)

  if !(Number.isInteger(rows)) || !(Number.isInteger(cols))
    p  parameter values are not integers 
  if rows>10 || rows<1
    p entered row value is out of the range choose less than 10 and greater than 1.
  else if cols>10 || cols<1
    p entered column value out of the range choose less than 10 and greater than 1.
  else
    table#outer
      - for(let i=0; i<rows; i++){
        tr#middle
          - for(let j=0; j<cols; j++){
            td=i+j*j
          - }
      - }